<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thedrinkbook.AdminstratorOverViewActivity">

    <Button
        android:id="@+id/bntLogoutAdminOverview"
        android:layout_width="119dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="#c3dceb"
        android:text="@string/logout"
        android:textColor="#17637d"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bntFill" />

    <ListView
        android:id="@+id/lvDrinksAdmin"
        android:layout_width="368dp"
        android:layout_height="368dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bntFill"
        android:layout_width="119dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="#c3dceb"
        android:text="@string/refill"
        android:textColor="#17637d"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lvDrinksAdmin" />

</android.support.constraint.ConstraintLayout>
