<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thedrinkbook.AdminstratorOverViewActivity">

    <Button
        android:id="@+id/bntLogoutAdminOverview"
        android:layout_width="119dp"
        android:layout_height="48dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="#c3dceb"
        android:text="@string/logout"
        android:textColor="#17637d"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/bntFill"
        android:layout_width="119dp"
        android:layout_height="48dp"
        android:layout_marginBottom="24dp"
        android:background="#c3dceb"
        android:text="@string/refill"
        android:textColor="#17637d"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/bntLogoutAdminOverview"
        app:layout_constraintStart_toStartOf="@+id/bntLogoutAdminOverview" />

    <ListView
        android:id="@+id/lvDrinksAdmin"
        android:layout_width="324dp"
        android:layout_height="280dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
