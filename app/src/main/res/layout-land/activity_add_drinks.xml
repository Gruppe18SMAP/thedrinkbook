<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thedrinkbook.AddDrinksActivity">

    <Button
        android:id="@+id/bntAddProduct"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="#c3dceb"
        android:text="@string/Add_product"
        android:textColor="#17637d"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/bntSaveAddProduct"
        app:layout_constraintStart_toStartOf="@+id/bntSaveAddProduct" />

    <Button
        android:id="@+id/bntSaveAddProduct"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="#c3dceb"
        android:text="@string/save_refilling"
        android:textColor="#17637d"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/bntCancelAdmin"
        app:layout_constraintStart_toStartOf="@+id/bntCancelAdmin" />

    <!--<ListView
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="1504dp"
        tools:layout_editor_absoluteY="256dp" />-->

    <TextView
        android:id="@+id/txtHeaderAddDrink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/update_stock"
        android:textColor="#17637d"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bntCancelAdmin"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="#c3dceb"
        android:text="@android:string/cancel"
        android:textColor="#17637d"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ListView
        android:id="@+id/lvAddDrinksAdmin"
        android:layout_width="324dp"
        android:layout_height="250dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:background="#f0f0f0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtHeaderAddDrink" />

</android.support.constraint.ConstraintLayout>
